# API Settings
SECRET_KEY=your_secret_key_here

# Database
POSTGRES_SERVER=db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_postgres_password
POSTGRES_DB=fintune

# MongoDB
MONGODB_URL=mongodb://mongo:27017
MONGODB_DB=fintune

# Redis
REDIS_URL=redis://redis:6379/0

# AWS S3 (utilisez des valeurs fictives pour les tests locaux)
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1
S3_BUCKET=fintune-files

# OpenAI (remplacez par votre clé API si vous souhaitez tester avec de vraies requêtes)
OPENAI_API_KEY=your_openai_api_key

# Anthropic (remplacez par votre clé API si vous souhaitez tester avec de vraies requêtes)
ANTHROPIC_API_KEY=your_anthropic_api_key

# Mistral AI (ajoutez votre clé API)
MISTRAL_API_KEY=your_mistral_api_key

# Stripe (remplacez par vos clés de test Stripe)
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# Configuration des prix Stripe
STRIPE_PRICE_STARTER=price_starter_id
STRIPE_PRICE_PRO=price_pro_id
STRIPE_PRICE_ENTERPRISE=price_enterprise_id

# Pricing
BASE_PRICE_PER_MB=0.05
MINIMUM_CHARGE=1.0

# Configuration de l'API
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=True

# Configuration de sécurité
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Frontend
REACT_APP_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
REACT_APP_API_URL=https://api.finetuner.io

# Configuration des webhooks Stripe
STRIPE_WEBHOOK_ENABLED=true

# Configuration des emails (pour les notifications d'abonnement)
EMAIL_ENABLED=true
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USERNAME=your_email_username
EMAIL_PASSWORD=your_email_password
EMAIL_FROM=noreply@finetuner.io

# Configuration du frontend
REACT_APP_WEBSITE_URL=https://finetuner.io
REACT_APP_SUPPORT_EMAIL=support@finetuner.io 